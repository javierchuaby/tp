@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor LOGIC_COLOR_T4
skinparam classBackgroundColor LOGIC_COLOR
title ClubTrack â€” Logic Component

package Logic as LogicPkg {

  package "Parser Classes" as ParserClasses {
    ' Keep this package abstract like AB3 (no inner classes listed)
  }

  class "<<interface>>\nLogic" as Logic
  class LogicManager

  abstract class Command
  class XYZCommand
  class CommandResult

  ' ClubTrack-specific helper for list switching
  class ClubTrackListManager
}

package Model {
  class HiddenModel #FFFFFF
}

package Storage {
  class HiddenStorage #FFFFFF
}

' --- Relationships (mirrors AB3 + our extra helper) ---
LogicManager .right.|> Logic
LogicManager -right-> "1" ParserClasses
ParserClasses ..> XYZCommand : <<create>>

XYZCommand -up-|> Command
LogicManager .left.> Command : <<call>>

LogicManager --> Model
LogicManager --> Storage
Command .right.> Model
' (Commands may read/write model; storage is coordinated by LogicManager)

Logic ..> CommandResult
LogicManager .down.> CommandResult
Command .up.> CommandResult : <<create>>

' Extra helper used by switch-feature commands
LogicManager ..> ClubTrackListManager : <<use>>

note right of XYZCommand
  XYZCommand = AddCommand, FindCommand, SwitchCommand, etc.
end note

@enduml
